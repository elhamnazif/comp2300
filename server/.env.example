# Environment
ENV=development

# Database
DB_PATH=jdbc:sqlite:vita.db

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER=http://0.0.0.0:8080
JWT_AUDIENCE=http://0.0.0.0:8080
JWT_REALM=comp2300

# Set to "false" to disable dev auth bypass in development mode
DEV_AUTH_BYPASS=true

# Resend (Email)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=Vita <noreply@yourdomain.com>

# App Base URL (used in email links)
APP_BASE_URL=http://localhost:8080
